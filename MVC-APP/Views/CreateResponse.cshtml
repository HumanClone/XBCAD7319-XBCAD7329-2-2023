@model YourViewModelType

<h2>Create Response</h2>

<form method="post">
    <div class="form-group">
        <label for="template">Select a Template:</label>
        @Html.DropDownList("Template", ViewBag.TemplateList as SelectList, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="response">Response:</label>
        <textarea id="response" name="response" rows="5" class="form-control"></textarea>
    </div>
    <button type="button" id="addTemplate" class="btn btn-primary">Add Template</button>
</form>

