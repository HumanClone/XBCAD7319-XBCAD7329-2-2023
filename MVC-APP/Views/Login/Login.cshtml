@model MVCAPP.Models.UserLogin
@{
    ViewData["Title"] = "Login";
}

<head>
    <link rel="stylesheet" href="~/css/login-styles.css" />
</head>

<div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card">
                <div class="card-body p-5 text-center" style="padding-top: 10rem!important;">

                    <div class="mb-md-5 mt-md-4 pb-5">

                        <h1 class="headings title">Login</h1>
                        <h2 class="headings subtitle">Sign in to continue</h2>

                        <form asp-action="Login" class="login-frm">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group mb-4" style="text-align: start;">
                                <label class="labels" asp-for="Email" class="control-label">EMAIL</label>
                                <input asp-for="Email" class="form-control form-control-lg" type="email" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-4" style="text-align: start;">
                                <label class="labels" asp-for="Password" class="control-label">PASSWORD</label>
                                <input asp-for="Password" class="form-control form-control-lg" type="password" required />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-dark">Login</button>
                                <span class="text-danger"></span>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

    

